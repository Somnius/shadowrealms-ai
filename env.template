# ShadowRealms AI - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it's in .gitignore

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Flask application settings
# These variables are used by Docker containers and local development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
# Generate a secure key using: python generate_secret_key.py
# This key is passed to Docker containers via docker-compose.yml
FLASK_SECRET_KEY=your-super-secret-key-here-change-this
VERSION=0.7.5

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database path (relative to backend directory)
DATABASE=/app/data/shadowrealms.db

# =============================================================================
# AI/LLM INTEGRATION
# =============================================================================
# OpenAI API key (if using OpenAI services)
OPENAI_API_KEY=your-openai-api-key-here

# Local LLM configuration
LLM_HOST=localhost
LLM_PORT=11434
LLM_MODEL=mythomakise-13b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# =============================================================================
# CHROMADB VECTOR DATABASE
# =============================================================================
# ChromaDB connection settings
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_COLLECTION=shadowrealms_memory

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password-here

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# JWT token settings
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# =============================================================================
# GPU MONITORING
# =============================================================================
# GPU performance thresholds (percentages)
GPU_THRESHOLD_HIGH=80
GPU_THRESHOLD_MEDIUM=60

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
# LM Studio configuration
LM_STUDIO_URL=http://localhost:1234
LM_STUDIO_API_KEY=
LM_STUDIO_MODEL=mythomakise-merged-13b
LM_STUDIO_TIMEOUT=30

# Ollama configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=command-r:35b
OLLAMA_TIMEOUT=30

# AI response configuration
AI_MAX_TOKENS_FAST=256
AI_MAX_TOKENS_MEDIUM=512
AI_MAX_TOKENS_SLOW=1024
AI_TEMPERATURE_FAST=0.6
AI_TEMPERATURE_MEDIUM=0.7
AI_TEMPERATURE_SLOW=0.8

# =============================================================================
# LOGGING
# =============================================================================
# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/backend.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# SECURITY
# =============================================================================
# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# RPG SYSTEM CONFIGURATION
# =============================================================================
# Default RPG system (D&D 5e, Pathfinder, etc.)
DEFAULT_RPG_SYSTEM=D&D 5e

# =============================================================================
# TRANSLATION PIPELINE
# =============================================================================
# Greek translation service settings
GREEK_TRANSLATION_ENABLED=true
GREEK_MODEL_HOST=localhost
GREEK_MODEL_PORT=11435

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup settings
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION_LEVEL=9
BACKUP_EXCLUDE_PATTERNS=*.tmp,*.log,node_modules/

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development-specific settings
DEVELOPMENT_MODE=false
TESTING_MODE=false
MOCK_AI_RESPONSES=false
